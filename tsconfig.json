{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "es5",
        "rootDir": "src/",
        "outDir": "build/",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "jsx": "react"
    },
    "lib": [
        "dom",
        "es7"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}